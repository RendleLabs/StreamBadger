@page "/"
@namespace StreamBadgerOverlay.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StreamBadgerOverlay</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    @* <link href="StreamBadgerOverlay.styles.css" rel="stylesheet" /> *@
    <style>
        body {
            overflow: hidden;
        }
        img.perry {
            animation-duration: 2s;
            animation-name: left_to_right;
            animation-timing-function: linear;
            left: 100%;
        }

        img.splash {
            animation-duration: 1s;
            animation-name: grow;
        }

        img.boom {
            animation-duration: 1s;
            transform-origin: bottom center;
            animation-name: grow;
        }

        @@keyframes left_to_right {
            from {
                left: 0;
            }
            to {
                transform: translateX(100%);
            }
        }

        @@keyframes grow {
            from {
                transform: scale(0);
            }
            to {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
<script>
    window.playSound = function (id, volume, dotnetHelper) {
        const element = document.getElementById(id);
        element.volume = volume;
        element.addEventListener('ended', function () {
            dotnetHelper.invokeMethodAsync('OnSoundEnded', id);
        });
        element.play();
    };

    window.imageAnimation = function(id, dotnetHelper) {
        const element = document.getElementById(id);
        element.addEventListener('animationend', function() {
            dotnetHelper.invokeMethodAsync('OnAnimationEnded', id);
        });
    }
</script>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
