@using StreamBadger.Shared.Clients
@inject IServerClient ServerClient;

<MudCard>
    <MudCardMedia Image="@ImageUrl" Height="200" />
    <MudCardContent>
        <MudText>@ImageName</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" OnClick="ImageClick">Show</MudButton>
    </MudCardActions>
</MudCard>

@code {

  [Parameter]
  public string ImageName { get; set; }

  public string ImageUrl => $"http://localhost:25293/images/{ImageName}";
  
  private async Task ImageClick()
  {
    await ServerClient.ShowImage(ImageName);
  }
}