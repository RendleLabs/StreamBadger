@inject ImageStore ImageStore;

<MudButton Link="/AddImage" Variant="Variant.Outlined">Add Image</MudButton>

<MudGrid>
  @foreach (var imageName in _names)
  {
      <MudItem xs="3">
		  <ImageCard ImageName="@imageName"/>
      </MudItem>
  }
</MudGrid>

@code {

  string[] _names = Array.Empty<string>();

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (firstRender)
    {
      _names = ImageStore.GetImageNames().ToArray();
      await InvokeAsync(StateHasChanged);
    }
  }

}