@using StreamBadger.Shared.Clients
@inject IServerClient ServerClient;

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">@Name</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" OnClick="Click">Play</MudButton>
    </MudCardActions>
</MudCard>

@code {

  [Parameter]
  public string Name { get; set; }
  
  private async Task Click()
  {
    await ServerClient.PlaySound(Name);
  }
  
}